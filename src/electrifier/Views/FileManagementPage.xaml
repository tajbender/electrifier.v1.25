<Page
    x:Class="electrifier.Views.FileManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:behaviors="using:electrifier.Behaviors" 
    xmlns:controls="using:electrifier.Controls"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controls:ExplorerBrowser Grid.Row="0"/>
        <CommandBar x:Name="StatusCommandBar"
                    Grid.Row="1"
                    DefaultLabelPosition="Collapsed"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center">
            <AppBarButton IsCompact="True"
                          IsEnabled="False">
                <TextBlock>
                    <Run FontWeight="SemiBold"
                         Text="Items: " />
                </TextBlock>
            </AppBarButton>
            <AppBarSeparator />
            <AppBarButton IsCompact="True"
                          IsEnabled="False">
                <TextBlock>
                    <Run FontWeight="SemiBold"
                         Text="Folders: " />
                </TextBlock>
            </AppBarButton>
            <AppBarSeparator />
            <AppBarButton IsCompact="True"
                          IsEnabled="False">
                <TextBlock>
                    <Run FontWeight="SemiBold"
                         Text="Files: " />
                </TextBlock>
            </AppBarButton>
            <AppBarSeparator />
            <AppBarButton IsCompact="True"
                          IsEnabled="False">
                <TextBlock>
                    <Run FontWeight="SemiBold"
                         Text="Size: " />
                    <Run Text="KB" />
                </TextBlock>
            </AppBarButton>
            <AppBarSeparator />
            <AppBarButton IsCompact="True"
                          IsEnabled="False">
                <TextBlock>
                    <Run FontWeight="SemiBold"
                         Text="Hidden: " />
                </TextBlock>
            </AppBarButton>
        </CommandBar>
    </Grid>
</Page>
